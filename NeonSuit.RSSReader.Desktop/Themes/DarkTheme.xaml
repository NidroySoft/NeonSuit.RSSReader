<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#252526</Color>
    <Color x:Key="PrimaryTextColor">#F1F1F1</Color>
    <Color x:Key="SecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="AccentColor">#007ACC</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
</ResourceDictionary>